<Window x:Name="inputWindow" x:Class="MR.BlkEdit.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Remove SuitBin" Height="204" Width="300">
    <Grid Height="137" VerticalAlignment="Top" Margin="0,0,0,-2">
        <TextBox x:Name="SuitBinTextBox" HorizontalAlignment="Left" Height="23" Margin="31,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="234"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Input Suit bin you want to Add/Remove:" VerticalAlignment="Top"/>
        <Button x:Name="ExecuteButton" Content="Execute" HorizontalAlignment="Left" Margin="101,95,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.52,-0.65" Click="Button_Click"/>
        <ProgressBar x:Name="progressBar" HorizontalAlignment="Left" Height="18" Margin="31,136,0,-17" VerticalAlignment="Top" Width="225" Visibility="Hidden"/>
        <Label x:Name="errorMessageLable" Content="" HorizontalAlignment="Left" Margin="10,74,0,0" VerticalAlignment="Top" Width="131" Height="16"/>

    </Grid>
</Window>
